@model BootcampKayit

<h2>Bootcamp Kayit Ekle</h2>
<hr>
<form asp-controller="Bootcampkayit" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label">Öğrenci</label>
        <select asp-for="OgrenciId" asp-items="ViewBag.Ogrenciler" class="form-control">
            <option value="">Seciniz</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="KursId" class="form-label">Bootcamp</label>
        <select asp-for="KursId" asp-items="ViewBag.Bootcamps" class="form-control">
            <option value="">Seciniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>

</form>